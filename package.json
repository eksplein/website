{
    "name": "eksplein-client",
    "description": "eksplein-client",
    "version": "0.0.6",
    "author": "Tom Bazarnik <tommywalkie@gmail.com>",
    "license": "GPL-3.0",
    "scripts": {
        "dev": "run-p watch sapper:dev",
        "build": "npm run type-check && sapper build",
        "export": "run-p type-check license-compliance && sapper export --timeout 999999",
        "start": "node __sapper__/build",
        "sapper:dev": "sapper dev --port 4000",
        "watch": "chokidar \"src/**/*.ts\" --silent -c \"run-p -c -s type-check lint:dev\"",
        "type-check": "tsc --noEmit -p ./tsconfig.json",
        "license-compliance": "license-compliance --production --allow \"MIT;WTFPL;ISC;Apache-2.0;0BSD;BSD-3-Clause;BSD-2-Clause;GPL-2.0;GPL-2.0+;GPL-3.0;LGPL-2.0;LGPL-3.0;LGPL-3.0+;MPL-2.0\"",
        "lint": "xo !node_modules !src/node_modules !__sapper__ ./src/**/*.ts --fix",
        "lint:dev": "xo !node_modules !src/node_modules !__sapper__ ./src/**/*.ts || true",
        "doc": "npm run doc:build && serve -p 9191 docs",
        "doc:build": "typedoc --out docs --exclude ./src/routes/**/* --mode file --includeDeclarations --excludeExternals src"
    },
    "dependencies": {
        "compression": "^1.7.1",
        "date-fns": "^1.30.1",
        "fs-extra": "^9.0.1",
        "gray-matter": "^4.0.2",
        "marked": "^1.1.1",
        "polka": "^0.5.0",
        "prism-svelte": "^0.4.6",
        "prismjs": "^1.20.0",
        "reading-time": "^1.2.0",
        "sirv": "^1.0.6"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-node-resolve": "^8.0.1",
        "@rollup/plugin-replace": "^2.3.3",
        "@tsconfig/svelte": "^1.0.10",
        "@types/compression": "^1.7.0",
        "@types/fs-extra": "^9.0.1",
        "@types/marked": "^1.1.0",
        "@types/node": "^14.10.0",
        "@types/polka": "^0.5.1",
        "@types/prismjs": "^1.16.1",
        "@typescript-eslint/types": "^3.7.1",
        "@typescript-eslint/typescript-estree": "^3.7.1",
        "cash-true": "^0.0.2",
        "chokidar-cli": "^2.1.0",
        "esbuild": "^0.6.34",
        "license-compliance": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "rollup": "^2.13.1",
        "rollup-plugin-esbuild": "^2.4.2",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-svg-import": "^1.5.1",
        "sapper": "^0.28.6",
        "sass": "^1.26.10",
        "serve": "^11.3.2",
        "svelte": "^3.24.1",
        "svelte-preprocess": "^4.2.1",
        "typedoc": "^0.19.1",
        "typescript": "^3.9.7",
        "xo": "^0.32.1"
    }
}
